@page
@model Hackathon.Pages_Questions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group-btn">
                <button class="btn btn-outline-primary">Search</button>
            </span>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question.First().NumPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question.First().QuestionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question.First().Tags)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Question) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumPoints)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuestionType)
                    </td>
                    <td>
                        @item.Tags.ElementAt(0) @item.Tags.ElementAt(1)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
