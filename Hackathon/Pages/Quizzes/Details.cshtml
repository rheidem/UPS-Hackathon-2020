@page
@model Hackathon.Pages_Quizzes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Quiz</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz.TotalPoints)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.TotalPoints)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz.RelatedJob)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz.RelatedJob)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz.Questions)
        </dt>
        <dd class="col-sm-10">
            @foreach(var item in Model.Quiz.Questions)
            {
                @await Html.PartialAsync("~/Pages/DetailPartialView/_detailPartialView.cshtml", item)
                <hr />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">All Quizzes</a>
</div>
